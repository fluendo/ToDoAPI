<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FluentToDo"
             x:Class="FluentToDo.MainPage">
    <ListView ItemsSource="{Binding TodoItems}" IsPullToRefreshEnabled="True" IsRefreshing="{Binding IsBusy}" RefreshCommand="{Binding CommandRefresh}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <ViewCell.ContextActions>
                        <MenuItem Text="Delete" Command="{Binding CommandDelete}"/>
                    </ViewCell.ContextActions>
                    
                    <Label Text="{Binding Item.Name}"/>
                    <Switch IsToggled="{Binding IsCompleted}"/>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding CommandAdd}" Text="Add"/>
    </ContentPage.ToolbarItems>
    
</ContentPage>